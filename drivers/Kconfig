####### Display Drivers ########
###############################

config DISPLAY_DRIVERS
	bool "Display drivers"
	default n
	---help---
	Select which display drivers you want to build.

if DISPLAY_DRIVERS
source drivers/display/Kconfig
endif # DISPLAY_DRIVERS

